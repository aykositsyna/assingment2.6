<Window x:Class="assingment2._6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assingment2._6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Rows="1" Columns="2">
        <GroupBox Header="Diciplines" Margin="10"></GroupBox>
        <UniformGrid Rows="2" Columns="1">
            <GroupBox Header="Filter">
                <StackPanel Margin="10">
                    <RadioButton Margin="0, 5, 0, 0"> All </RadioButton>
                    <RadioButton Margin="0, 5, 0, 0">Successfully passed</RadioButton>
                    <RadioButton Margin="0, 5, 0, 0"> Not passed yet</RadioButton>
                    <Grid Orientation="Horizontal">
                        <Button Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"> Save </Button>
                        <Button Margin="20, 10, 0, 0" HorizontalAlignment="Stretch">Show</Button>
                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Add dicipline">
                <StackPanel>
                    
                </StackPanel>
            </GroupBox>
        </UniformGrid>
    </UniformGrid>
</Window>
